<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_error"
            android:layout_width="140dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_error_red_96dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txt_algo_errado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Algo deu errado !"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_error"/>


        <TextView
            android:id="@+id/txt_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Toque para recarregar ..."
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/txt_algo_errado"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_refresh_black_24dp"
            android:layout_below="@+id/txt_algo_errado"
            android:layout_toLeftOf="@+id/txt_try_again"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>



</LinearLayout>