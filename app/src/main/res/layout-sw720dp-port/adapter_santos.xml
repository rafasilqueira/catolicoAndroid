<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="16dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_santo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="User avatar"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/txt_santo_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintLeft_toRightOf="@+id/img_santo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/santos.json/names/short_names/name" />

        <TextView
            android:id="@+id/txt_santo_comemoracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            tools:text="@sample/santos.json/names/datas_exemplo/data"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintLeft_toRightOf="@+id/img_santo"
            app:layout_constraintTop_toBottomOf="@+id/txt_santo_nome" />

        <TextView
            android:id="@+id/txt_dias_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            tools:text="@sample/santos.json/names/dias_data/data"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintLeft_toRightOf="@+id/img_santo"
            app:layout_constraintTop_toBottomOf="@+id/txt_santo_comemoracao" />

        <TextView
            android:id="@+id/txt_is_santo_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/dourado"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/txt_dias_data"
            android:layout_marginLeft="05dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/favorite_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="4dp"
            android:background="?selectableItemBackground"
            app:layout_constraintRight_toLeftOf="@+id/divider_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_favorite_star_gray_72dp"
            android:layout_marginEnd="4dp" />

        <View
            android:id="@+id/divider_line"
            android:layout_width="1dp"
            android:layout_height="85dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="05dp"
            android:layout_marginRight="05dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintRight_toLeftOf="@+id/share_button"
            app:layout_constraintBottom_toBottomOf="parent" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/share_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="10dp"
            android:background="?selectableItemBackground"
            app:srcCompat="@drawable/ic_share_gray_72dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/divider_line_2"
            android:layout_width="1dp"
            android:layout_height="85dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="7dp"
            android:layout_marginEnd="05dp"
            android:layout_marginRight="05dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintRight_toLeftOf="@+id/favorite_button"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/pray_button"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="20dp"
            android:background="?selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/divider_line_2"
            app:srcCompat="@drawable/ic_hand_prayer_gray_72dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/txt_prayers_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_count"
            android:text="@string/dia_exemplo"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/txt_santo_nome"
            app:layout_constraintRight_toLeftOf="@id/divider_line_2"
            android:layout_marginLeft="07dp"
            android:layout_marginStart="07dp" />

    </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/txt_santo_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="@string/lorem_ipsum_dolor"
            android:layout_margin="8dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
